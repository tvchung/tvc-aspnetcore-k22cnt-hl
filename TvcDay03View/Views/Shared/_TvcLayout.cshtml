<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TvcDay03View</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TvcDay03View.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="_TvcNavBar" />
    </header>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <partial name="_TvcLeftMenu" />
            </div>
            <main role="main" class="pb-3 col-6">
                @RenderBody()
            </main>
            <div class="col-3">
                @await Component.InvokeAsync("TvcDemo")
            </div>
        </div>
    </div>

    <partial name="_TvcFooter" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
